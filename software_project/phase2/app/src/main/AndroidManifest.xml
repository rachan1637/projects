<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gameproject">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".puzzle_game.Activity.PuzzleGameActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".puzzle_game.Activity.PuzzleGameIntroActivity"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".puzzle_game.Activity.BackgroundChangeActivity"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".reaction_game.ReactionGameMain"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".reaction_game.ReactionCustomize"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".reaction_game.ReactionGameActivity"
            android:parentActivityName=".obstacle_game.Activity.ObstacleGameActivity" />
        <activity
            android:name=".obstacle_game.Activity.ObstacleGameIntroActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".obstacle_game.Activity.ObstacleGameActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AchievementsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".obstacle_game.Activity.ObstacleGameEndActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SignUpActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".puzzle_game.Activity.ImageActivity"
            android:parentActivityName=".puzzle_game.Activity.PuzzleGameIntroActivity" />
        <activity
            android:name=".obstacle_game.Activity.CustomizationActivity"
            android:parentActivityName=".obstacle_game.Activity.ObstacleGameIntroActivity" />
        <activity
            android:name=".obstacle_game.Activity.ObstacleGameRulesActivity"
            android:parentActivityName=".obstacle_game.Activity.ObstacleGameIntroActivity"
        />
    </application>

</manifest>